{{ attach_library('PROJECT_NAME/inline-navigation-item') }}

<li class="inline-navigation-item">
  <a href="{{ url }}" class="inline-navigation-item__link">
    <figure{{ create_attribute().addClass('inline-navigation-item__image').addClass(not image ? 'inline-navigation-item__image--fallback') }}>
      {% if image %}
        {{ image|responsive_image('inline_navigation_1_1', 'lazyload') }}
      {% else %}
        {% include '@particles/svg-icon/svg-icon.twig' with {
          'svgIconName': 'no-image'
        } %}
      {% endif %}
    </figure>
    <h3 class="inline-navigation-item__title">{{ label }}</h3>
    {% if teaser %}
      <p class="inline-navigation-item__text">{{ teaser }}</p>
    {% endif %}
    <div class="inline-navigation-item__read-more">{{ 'Read more'|t }}</div>
  </a>
</li>
